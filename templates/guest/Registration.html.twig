{% extends 'guest/base.html.twig' %}

{% block metatitle %}
    <title>beatlink - registration</title>
{% endblock metatitle %}

{% block main %}
<main class="registration">

<div class="title-registration">
                <h1>inscris toi !</h1>
                <h2>Et fais nous vibrer avec ta musique !</h2>
            </div>
        <section id="section_1">
            <form action="{{ path('inscription') }}" method="POST">
                <div class="nom-prenom">
                    <div class="input-group">
                        <label for="nom">Entrez votre nom</label>
                        <input type="text" id="nom" name="nom" placeholder="votre nom*">
                    </div>

                    <div class="input-group">
                        <label for="prénom">Entrez votre prénom</label>
                        <input type="text" id="prénom" name="prénom" placeholder="votre prénom*">
                    </div>
                </div>

                <div class="input-group">
                    <label for="email">Adresse e-mail</label>
                    <input type="email" id="email" name="email" placeholder="monEmail@gmail.com*">
                </div>

                <div class="input-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="password" placeholder="mot de passe*">
                </div>

                <div class="content-boutton2">
                    <div class="div-start">
                        <button type="button" onclick="window.location.href='connexion'">Je me connecte !</button>
                    </div>
                    <div class="divbutton">
                        <button type="submit">Suivant !</button>
                    </div>
                </div>
            </form>
        </section>

    </main>
    <script src="../assets/controllers/burger.js"></script>
    <script src="../assets/controllers/verify-form-registration.js"></script>
</body>

{% endblock main %}

