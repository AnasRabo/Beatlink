{% extends 'guest/base.html.twig' %}

{% block metatitle %}
    <title>beatlink - reservation</title>
{% endblock metatitle %}

{% block main %}

    <main class="reservation">
    {% set studios = {
    'red-house': {
        'name': 'Red House',
        'image': 'https://www.spectable.com/image/original/i/49hertz-studio-enregistrement_503582.jpg',
        'description': 'Studio professionnel pour tous vos projets musicaux.'
    },
    'blasta-studio': {
        'name': 'Blasta studio',
        'image': 'https://www.blasta.fr/wp-content/uploads/2024/04/RETOUCHE-STUDIO-B-REGIE-COMP-scaled.jpg',
        'description': 'Ambiance créative avec équipement haut de gamme.'
    },
    'gam-studio': {
        'name': 'Gam Studio',
        'image': 'https://www.gamstudio.com/data/documents/images/sliders/home/dsc_7920ok.jpg',
        'description': 'Parfait pour les enregistrements et mixages de qualité.'
    },
    'music-hall-source': {
        'name': 'Music Hall Source',
        'image': 'https://www.roissyenbrie77.fr/wp-content/uploads/2017/08/studio-music-hall-source.jpg',
        'description': 'Un lieu spacieux pour vos sessions longues.'
    },
    'qds-studios': {
        'name': 'QDS studios',
        'image': 'https://questiondeson.com/wp-content/uploads/2021/03/Studio_B_2430x1620_1.jpg',
        'description': 'Pour une expérience sonore unique.'
    },
    'urban-studio': {
        'name': 'Urban studio',
        'image': 'https://www.saint-quentin.fr/uploads/Image/53/14968_981_urban-studio-04.jpg',
        'description': 'Studio moderne au cœur de la ville.'
    }
} %}

{% set currentStudio = studios[studioSlug] ?? null %}

<section class="reservation-section">
    {% if currentStudio %}
    <div class="studio-content">
    <article>
        <h1>Réservation pour {{ currentStudio.name }}</h1>
        <img src="{{ currentStudio.image }}" alt="Photo du studio {{ currentStudio.name }}" />
        <p>{{ currentStudio.description }}</p>
        </article>
    </div>
    
    <div class="form-studio">
        <form method="post" action="#">
            <label for="date">Date :</label>
            <input type="date" id="date" name="date" required />

            <label for="heure">Heure :</label>
            <input type="time" id="heure" name="heure" required />

            <label for="duree">Nombre d'heures :</label>
            <input type="number" id="duree" name="duree" min="1" max="12" required />

            <button type="submit">Valider la réservation</button>
        </form>
        </div>
        </section>
    {% else %}
        <h1>Studio non trouvé</h1>
        <p>Désolé, ce studio n'existe pas ou n'a pas été renseigné correctement.</p>
    {% endif %}


    </main>
    {% endblock main %}

{% block scripts %}
    <script src="../../assets/controllers/burger.js"></script>
{% endblock scripts %}
